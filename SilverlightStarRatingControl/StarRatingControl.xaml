<UserControl x:Class="SilverlightStarRatingControl.StarRatingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="34" d:DesignWidth="170"
    Width="170" Height="34"
    Foreground="#404080">
    <UserControl.RenderTransform>
        <ScaleTransform x:Name="scaleTransform" CenterY="17" />
    </UserControl.RenderTransform>

    <!-- Background MUST be set to something (even if transparent) for us 
    to pick up all the mouse events -->
    <Grid x:Name="LayoutRoot" Background="#00FFFFFF">

    </Grid>
</UserControl>
