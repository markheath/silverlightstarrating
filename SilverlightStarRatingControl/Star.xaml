<UserControl x:Class="SilverlightStarRatingControl.Star"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="34" d:DesignWidth="34" Foreground="#6060FF">
    <Grid x:Name="LayoutRoot">

        <Path x:Name="Fill" Fill="#D0D0D0" 
    Data="M 2,12 l 10,0 l 5,-10 l 5,10 l 10,0 l -7,10 l 2,10 l -10,-5 l -10,5 l 2,-10 Z" />

        <Path x:Name="HalfFill" Fill="#FFFF80" 
    Data="M 2,12 l 10,0 l 5,-10 v 25 l -10,5 l 2,-10 Z" />

        <Path x:Name="Outline" Stroke="{Binding Parent.Foreground, ElementName=LayoutRoot}"     
    StrokeThickness="2" 
    StrokeLineJoin="Round"
    Data="M 2,12 l 10,0 l 5,-10 l 5,10 l 10,0 l -7,10 l 2,10 l -10,-5 l -10,5 l 2,-10 Z" />
    <!-- width and height of this star is 34-->
    </Grid>
</UserControl>
