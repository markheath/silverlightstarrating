<UserControl x:Class="SilverlightStarRatingControl.Star"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="34" d:DesignWidth="34" Foreground="Red">
    <Path x:Name="LayoutRoot" Stroke="{Binding Foreground, ElementName=LayoutRoot.Parent}" 
    Fill="#C0C0C0" 
    StrokeThickness="3" 
    StrokeLineJoin="Round"
    Data="M 2,12 l 10,0 l 5,-10 l 5,10 l 10,0 l -7,10 l 2,10 l -10,-5 l -10,5 l 2,-10 Z" />
    <!-- width and height of this star is 34-->
</UserControl>
